{
  "compilerOptions": {
    // Enable latest features
    "lib": ["DOM", "ESNext"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "allowJs": true,
    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "customConditions": ["source"],

    // JSX
    "jsx":"react-jsx",
  },
  "include": ["src/**/*"]
}
